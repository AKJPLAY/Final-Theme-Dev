<slider-section class="featured-item-section" style="--featured-item-title-dfs: {{ section.settings.title_size_desktop }}px; --featured-item-title-mfs: {{ section.settings.title_size_mobile }}px;">
    <div class="container">
        <!-- Slider main container -->
        {% assign breakpointsCount = 0 %}
        {% assign breakpointsIndex = 0 %}
        {% for block in section.blocks %}
            {% if block.type == 'breakpoint'%}
                {% assign breakpointsCount = breakpointsCount | plus: 1 %}
            {% endif %}
        {% endfor %}
        <div class="swiper swiper-{{ template.name }}{{ section.id }}" id="swiper-{{ template.name }}{{ section.id }}" config='{ {% if breakpointsCount == 0 %} "slidesPerView": {{ section.settings.slide_show }},"spaceBetween": {{ section.settings.slide_space }} , {% endif %} "loop": {{ section.settings.loop }}{% if section.settings.autoplay == true %},"autoplay": {"delay": {{ section.settings.delay }}}{% endif %},"speed": {{ section.settings.speed }},"navigation":{"nextEl": ".swiper-button-next","prevEl": ".swiper-button-prev"},"pagination":{"el": ".swiper-pagination","dynamicBullets": "true","clickable": "true"}, "breakpoints":{ {% for block in section.blocks %}{% if block.type == 'breakpoint'%} {% assign breakpointsIndex = breakpointsIndex | plus: 1 %} "{{ block.settings.width }}":{"slidesPerView": {{ block.settings.slide_show }}, "spaceBetween": {{ block.settings.slide_space }} }{% if breakpointsIndex != breakpointsCount %},{% endif %}{% endif %} {%endfor%} }}'> 
            <!-- Additional required wrapper -->
            <div class="swiper-wrapper">
                <!-- Slides -->
                {% for block in section.blocks %}
                    {% if block.type == 'collection' %}
                        <div class="swiper-slide">
                            <div class="inner-container {{ block.settings.image_position }}">
                                <img src="{{ block.settings.image | img_url: 'master' }}" alt="{{ block.settings.title }}">
                                <h2 class="title">{{ block.settings.title }}</h2>
                            </div>
                        </div>     
                    {% endif %}
                {% endfor %}
            </div>
            {% if section.settings.dots %}
                <div class="swiper-pagination"></div>    
            {% endif %}
            {% if section.settings.arrow %}
                <div class="swiper-button-prev">
                    <svg width="48" height="48" viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <circle cx="24" cy="24" r="24" transform="rotate(-180 24 24)" fill="#D9D9D9"/>
                        <path d="M28.0002 35L18.0002 24L28.0002 13" stroke="black" stroke-width="2" stroke-linecap="round"/>
                    </svg>
                </div>
                <div class="swiper-button-next">
                    <svg width="48" height="48" viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <circle cx="24" cy="24" r="24" fill="#D9D9D9"/>
                        <path d="M19.9998 13L29.9998 24L19.9998 35" stroke="black" stroke-width="2" stroke-linecap="round"/>
                    </svg>
                </div>
            {% endif %}
        </div>        
    </div>
</slider-section>

</div>
